@{
    ViewBag.Title = ViewBag.News.title;
}
<div style="padding:20px 20px 20px 20px">
    <p>@string.Format("{0:dd.MM.yyyy}",ViewBag.News.event_date)</p>

    <h2 style="color:black; margin:0;">@ViewBag.News.title</h2>

    <img src="@(System.Web.Configuration.WebConfigurationManager.AppSettings["admin-url"] + "upload_news/"+ ViewBag.News.image)" style="max-height:400px; max-width:1000px;"  />

    <p><i>@ViewBag.News.descriptoin</i></p>
    <div style="text-align: justify; -ms-text-justify: inter-word; text-justify: inter-word;">
        @Html.Raw(ViewBag.News.text)
    </div>
</div>
