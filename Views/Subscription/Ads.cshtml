@model mf_frontend.Models.tb_ads_request

@{
    ViewBag.Title = "Заявка на размещения рекламы";
}
<br />
<h2>Заявка на размещения рекламы</h2>
<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <table class="table-form">
        <tr>
            <td style="width: 250px;" align="right">
                ФИО(*)
            </td>
            <td>
                @Html.TextBoxFor(model => model.fio, new { @class = "text-box", required = "required" })
            </td>
        </tr>
       
        <tr>
            <td align="right">Наименование организации</td>
            <td>@Html.TextBoxFor(model => model.organization, new { @class = "text-box" })</td>
        </tr>
     
        <tr>
            <td align="right">Контактный телефон(*)</td>
            <td>@Html.TextBoxFor(model => model.phone, new { @class = "text-box", required = "required" })</td>
        </tr>
      
        <tr>
            <td></td>
            <td>
                <input class="btn" type="submit" value="Отправить заявку" /> | <a href="/">Отказаться</a>
            </td>
        </tr>
    </table>
}
