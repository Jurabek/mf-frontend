@using mf_frontend.Models
<style>
    @@media screen and (max-width: 900px)
     {
        .category{
            float:right;
        }
    }
    .category{
        background-color:lightgray; width:230px; float:right; margin-top:50px;
    }
</style>
<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<link rel="stylesheet" href="~/Content/expand.css" />
<div style="display:inline">
    <h2>
        Руководство Министерства финансов Республики Таджикистан
    </h2>
    <div style="padding-top:20px; width: 70%; margin-left:20px; float:left;">
        <h5 style="margin:0; padding:0;">Мининстр финансов Республика Таджикистан</h5>
        <p class="mdl-typography--body-2">@ViewBag.Ministr.name @ViewBag.Ministr.full_name @ViewBag.Ministr.last_name</p>
        <img style="width:70%" src="@(System.Web.Configuration.WebConfigurationManager.AppSettings["admin-url"] + "upload_files/"+ ViewBag.Ministr.logo_file_name)"/>
        <div style="margin-top:50px">
                <section>
                    <article>
                        <details open>
                            <summary class="noselect">Замистители мин фин</summary>
                            @foreach (var item in ViewBag.Zamistitile)
                            {
                                <div style="margin:20px 20px 20px 20px">
                                    <img width="100" height="90"
                                         src="@(System.Web.Configuration.WebConfigurationManager.AppSettings["admin-url"] + "upload_files/"+ item.logo_file_name)" />
                                    <div style="display:inline-block; vertical-align:top; margin:10px 10px 10px 10px">
                                        <span style="font-size:18px" class="mdl-typography--body-2">Должность:</span>
                                        <span >
                                            @item.doljnost
                                        </span>
                                        <div>
                                            <span style="font-size:18px" class="mdl-typography--body-2">ФИО:</span>
                                            <span>
                                                    @item.name @item.full_name @item.last_name
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </details>
                    </article>
                </section>
        </div>

        <div>
            <section>
                <article>
                    <details open>
                        <summary class="noselect">Руководиле </summary>
                        @foreach(var item in ViewBag.Ruk)
                        {
                            <details style="margin:20px 10px 10px 40px;">
                                <summary class="noselect">@item.doljnost</summary>
                                <div style="margin:15px 10px 15px 10px">
                                    <span style="font-size:18px" class="mdl-typography--body-2">ФИО:</span>
                                    <span>
                                        @item.name @item.full_name @item.last_name
                                    </span>
                                </div>
                            </details>
                        }
                        
                    </details>
                </article>
            </section>
        </div>
    </div>
    <div class="category">
        <div class="" style="max-height: 210px !important">
            <div class="news-title">
                <i class="fa fa-file-text-o news-title-icon"></i><span class="news-title-text">Категории новостей</span>
            </div>
            <div class="news-body" style="padding:15px;">
                <div style="padding-top:4px; border-bottom: 1px dotted white; padding-bottom:4px; width:200px">
                    <a href="@("/" + System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName + "/Leaders/Bio")">Биография</a>
                </div>
                <div style="padding-top:4px; border-bottom: 1px dotted white; padding-bottom:4px; width:200px">
                    <a href="@("/" + System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName + "/Leaders/ContactInfo")">Контакты</a>
                </div>
                @foreach (tb_event_leaders_category row in ViewBag.Items)
                {
                    <div style="padding-top:4px; border-bottom: 1px dotted white; padding-bottom:4px; width:200px">
                        <a href="@("/" + System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName + "/Leaders/Ministr/" + row.Id)">@row.name</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
